{% extends 'base.html.twig' %}

{% block title %}Détail un formateur{% endblock %}

{% block body %}
    <h1>Détail du formateur</h1>
    <p>    
        Formateur : {{ formateur }} <br>
    </p>

    Référent des sessions suivantes :<br> 
    {% for session in formateur.sessions %}
    <a href="{{ path('show_session', {'id':session.id}) }}">{{ session }}</a><br> 
    {% endfor %}
  
   
{% endblock %}