<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/style.css') }}">
            <script src="https://kit.fontawesome.com/45e38e596f.js" crossorigin="anonymous"></script>
        {% endblock %}
        
    </head>
    <body>
        <nav>
             <ul>
                <li><a href="{{path('app_home') }}">Home</a></li>   
                <li><a href="{{path('app_session') }}">Liste des sessions</a></li>          
                <li><a href="{{path('app_formateur') }}">Liste des formateurs</a></li>  
                <li><a href="{{path('app_module') }}">Liste des modules</a></li>  
                <li><a href="{{path('app_stagiaire') }}">Liste des stagiaires</a></li>  
                 <li><a href="{{path('app_categorie') }}">Liste des categories</a></li>  
            </ul>
        </nav>
                {% if app.user %}
                <a href="{{path('app_logout')}}">Se déconnecter</a>
                <a href="">Mon profil</a>
                {% else %}
                <a href="{{path('app_login')}}">Se connecter</a>
                <a href="{{path('app_register')}}">S'enregistrer</a>
            {% endif %}
            {% if is_granted('ROLE_ADMIN') %}        
                {# Si l'utilisateur est authentifié et qu'il est admin #}        
                <a class="btn btn-outline-warning" href="{{ path('admin') }}">Page admin</a>
            {% endif %}

        {% block body %}
        {% endblock %}


        {% block javascripts %}
            
        {% endblock %}
    </body>
</html>

