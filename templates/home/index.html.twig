{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}

<h1>Bienvenue  {{ app.user.pseudo }}</h1>

    <table>
        <h1>Liste des sessions en cours</h1>
    <tbody>
    {% for session in sessions %}
    <tr>
        <td><a href="{{ path('show_session', {'id':session.id}) }}">{{ session.nomSession }}</a></td>
        <td><a href="{{ path('show_session', {'id':session.id}) }}">{{ session.dateDebut|date("d/m/Y") }}</a></td>
        <td><a href="{{ path('show_session', {'id':session.id}) }}">{{ session.dateFin|date("d/m/Y") }}</a></td>
    </tr>
    {% endfor %}
    </tbody>    
    </table>

    <table>
        <h1>Liste des sessions à venir </h1>
    <tbody>
    {% for session in sessions %}
    <tr>
        <td><a href="{{ path('show_session', {'id':session.id}) }}">{{ session.nomSession }}</a></td>
    </tr>
    {% endfor %}
    </tbody>    
    </table>

    <table>
        <h1>Liste des sessions passées</h1>
    <tbody>
    {% for session in sessions %}
    <tr>
        <td><a href="{{ path('show_session', {'id':session.id}) }}">{{ session.nomSession }}</a></td>
    </tr>
    {% endfor %}
    </tbody>    
    </table>


{% endblock %}


